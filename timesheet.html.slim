doctype html
html
  head
    css:
      html {
        font-family: sans-serif;
      }

      body {
        width: 8.5in;
        height: 11in;
        border: 1px solid #000;
      }

      h1 {
        font-size: 2em;
        line-height: 0;
      }

      .page-margins {
        margin: 0.5in;
        /width: 100%;
        /height: 100%;
      }

      header {
        margin-bottom: 3em;
      }

      .full {
        clear: both;
        width: 100%;
        padding-top: 1in;
        padding-bottom: 0.25in;
      }

      .right {
        float: right;
        width: 50%;
        text-align: right;
      }

      .left {
        float: left;
        width: 50%;
      }

      table {
        width: 100%;
        border-collapse: collapse;
      }

      tr {
        padding: 0;
        border-bottom: 1px solid #DDDDDD;
        border-top: 1px solid #DDDDDD;
        text-align: left;
      }

      td {
        padding: 0.5em;
      }

      .thead {
        font-weight: bold;
        background: #DDDDDD;
        border: none;
      }

      .thead > td {
        padding: 0.5em;
      }

      td:last-child {
        text-align: right;
      }

  body
    section.page-margins
      aside.left
        p Will Paul <br>
          37 Camptown Rd <br>
          Waverly, NY 14892 <br>
        br
        br

        p Global Thinking <br>
          Jason Kowal <br>
          3670 Wheeler Ave <br>
          Alexandria, VA 22304 <br>

      section.right
        header
          h1 Will Paul
          p Time Sheet

        table
          tr
            td Time Sheet Pay Period:
            td #{to}
          tr
            td
            td #{from}

          tr.thead
            td Total Hours:
            td #{hours} hours

      section.full
        table
          tr.thead
            td Task
            td Project
            td Date
            td Rate
            td Hours

          - entries.each do |a|
            tr
              td #{a["task"]}
              td #{a["project"]}
              td #{a["date"]}
              td $25.00
              td #{a["hours"]}

      section.right
        table
          tr.thead
            td Total Hours:
            td #{hours} hours
