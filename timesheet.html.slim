doctype html
html
  head
    css:
      html {
        font-family: sans-serif;
      }

      body {
        width: 8.5in;
        height: 11in;
        border: 1px solid #000;
      }

      h1 {
        font-size: 2em;
        line-height: 0;
      }

      .page-margins {
        margin: 0.5in;
        /width: 100%;
        /height: 100%;
      }

      header {
        margin-bottom: 3em;
      }

      .right {
        float: left;
        width: 50%;
        text-align: right;
      }

      .left {
        float: left;
        width: 50%;
      }

      table {
        width: 100%;
        border-collapse: collapse;
      }

      tr {
        padding: 0;
        border-bottom: 1px solid #DDDDDD;
        border-top: 1px solid #DDDDDD;
        text-align: left;
      }

      td {
        padding: 0.25em;
      }

      .thead {
        font-weight: bold;
        background: #DDDDDD;
        border: none;
      }

      .thead > td {
        padding: 0.5em;
      }

      td:last-child {
        text-align: right;
      }

